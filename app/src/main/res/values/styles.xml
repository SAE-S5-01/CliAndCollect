<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/app_padding</item>
    </style>

    <style name="FooterComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/footer_min_height</item>
        <item name="android:gravity">center</item>
        <item name="android:contentDescription">Fragments</item>
        <item name="android:background">@color/footer_background</item>
    </style>

    <style name="FooterImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/footer_icon_dimens</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">@dimen/footer_icon_padding_y</item>
        <item name="android:layout_marginHorizontal">@dimen/footer_icon_margin_x</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
