<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- État "activated" -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bouton_secondaire" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- État "disabled" -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bouton_secondaire_desactive" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- État par défaut -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bouton_principal" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</selector>
